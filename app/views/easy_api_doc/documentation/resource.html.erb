<% content_for(:sidebar) do %>
  <%= render 'resource_index' %>
<% end %>

<% content_for(:heading) do %>
  <%= render 'namespace_panel' %>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @resource.name %> <%= content_tag(:small, content_tag(:span, '', :class => 'icon') + 'authenticated', :class => 'authenticated') if @resource.authentication %></h3>
  </div>
  <div class="panel-body">
    <%= contents_for_resource(@resource, 'description') %>
  </div>
</div>

<ul class="list-group">
  <% @actions.each do |action| %>
    <li class="list-group-item">
      <span class="label label-<%= label_color_for_http_method(action.attributes['http_method']) %> method-label"><%= action.attributes['http_method'].upcase %></span>&nbsp;&nbsp;<%= link_to action.name, action_link(action) %>
    </li>
  <% end %>
</ul>
